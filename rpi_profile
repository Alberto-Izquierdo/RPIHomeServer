target_host=arm-linux-gnueabihf
standalone_toolchain=$PROFILE_DIR/tools/arm-bcm2708/gcc-linaro-arm-linux-gnueabihf-raspbian-x64/bin/
cc_compiler=gcc
cxx_compiler=g++

[settings]
os_build=Linux
arch_build=x86_64
os=Linux
arch=armv7
compiler=gcc
compiler.version=4.8
compiler.libcxx=libstdc++11
build_type=Release

[env]
CONAN_CMAKE_FIND_ROOT_PATH=$PROFILE_DIR/tools/arm-bcm2708/arm-linux-gnueabihf/arm-linux-gnueabihf/sysroot/
PATH=[$standalone_toolchain]
CHOST=$target_host
AR=$target_host-ar
AS=$target_host-as
RANLIB=$target_host-ranlib
LD=$target_host-ld
STRIP=$target_host-strip
CC=$target_host-$cc_compiler
CXX=$target_host-$cxx_compiler
CXXFLAGS=-I"$standalone_toolchain/$target_host/lib/include" -std=c++11
